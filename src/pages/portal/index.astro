---
import { Icon } from "astro-icon";

import Layout from "../../layouts/Layout.astro";

import appStoreIcon from "../../assets/images/app_store_icon.svg";
import playStoreIcon from "../../assets/images/play_store_icon.svg";

const seqImage = "/images/portal/seq_portal.webp";
const nswImage = "/images/portal/nsw_portal.webp";
const climateImage = "/images/portal/climate_portal.webp";
const cyclonesImage = "/images/portal/cyclones_portal.webp";
const settingsImage = "/images/portal/settings_portal.webp";
const MemberTVImage = "/images/portal/youtube_portal.webp";

const sections = [
  {
    title: "South East QLD & Queensland",
    image: seqImage,
    links: [
      {
        title: "South East QLD Daily Forecast",
        href: "/portal/south-east-queensland-daily-forecast",
      },
      {
        title: "QLD State Daily Forecast",
        href: "/portal/queensland-state-forecast",
      },
      {
        title: "SEQ & QLD State 7 Day Forecast",
        href: "/portal/queensland-7-day-forecast",
      },
      {
        title: "QLD State 1 Month Outlook",
        href: "/portal/queensland-1-month-rainfall-temperature-outlook",
      },
      {
        title: "QLD State 3 Month Outlook",
        href: "/portal/queensland-long-range-outlook",
      },
    ],
  },
  {
    title: "North East NSW & NSW ACT & VIC",
    image: nswImage,
    links: [
      {
        title: "North East NSW Daily Forecast",
        href: "/portal/north-east-nsw-daily-forecast",
      },
      {
        title: "NSW, ACT & VIC Daily Forecast",
        href: "/portal/nsw-act-vic-daily-forecast",
      },
      {
        title: "NENSW, NSW, ACT & VIC 7 Day Forecast",
        href: "/portal/nensw-nsw-act-vic-7-day-forecast",
      },
      {
        title: "NSW, ACT & VIC 1 Month Outlook",
        href: "/portal/nsw-act-vic-1-month-outlook",
      },
      {
        title: "NSW, ACT & VIC 3 Month Outlook",
        href: "/portal/nsw-act-vic-3-month-outlook",
      },
    ],
  },
  {
    title: "Tropical Lows & Cyclones",
    image: cyclonesImage,
    links: [
      {
        title: "Australia wide watch areas for Lows & Cyclones",
        href: "/portal/tropical-cyclones",
      },
      {
        title:
          "Active cyclones with tracking maps, intensity and full forecast",
        href: "/portal/tropical-cyclones",
      },
      {
        title: "2022 / 23 Seasonal Outlook",
        href: "/portal/tropical-cyclones",
      },
    ],
  },
  {
    title: "Climate Drivers & Long Range",
    image: climateImage,
    links: [
      {
        title: "La Nina / El Nino, Indian Ocean & SOI",
        href: "/portal/climate",
      },
      {
        title: "3-6 Month Rain & Temperature (Raw Data Maps)",
        href: "/portal/6-month-outlooks",
      },
    ],
  },

  {
    title: "Subscription Settings",
    image: settingsImage,
    links: [
      { title: "Subscription details", href: "#" },
      {
        title: "Email alerts and Warning settings",
        href: "#",
      },
    ],
  },
  {
    title: "Higgins Members TV",
    image: MemberTVImage,
    links: [
      {
        title: "Video Forecasts For Significant / Severe Weather",
        href: "/portal/higgins-members-tv",
      },
    ],
  },
];
---

<Layout title="Members Portal |  Higgins Storm Chasing">
  <div class="mx-auto max-w-screen-2xl sm:px-2">
    <section class="px-6 pt-8">
      <h1 class="text-3xl font-bold">Members Portal Home Page</h1>
      <p class="mt-3 text-lg text-gray-600">
        Access our forecasts, maps and alerts through the links below.
      </p>
      <p class="mt-3 text-lg font-bold text-gray-800">
        Download our new free Higgins Weather app by clicking on the Apple or
        Google links below.
      </p>
      <div class="mt-2 flex flex-wrap justify-around md:justify-start">
        <a href="https://apps.apple.com/au/app/higgins-weather/id1623633649">
          <img
            src={appStoreIcon}
            width="216"
            height="64"
            alt="Apple App Store"
            class="mx-2 my-2 h-16"
          />
        </a>
        <a
          href="https://play.google.com/store/apps/details?id=com.higginsstormchasing.app"
        >
          <img
            src={playStoreIcon}
            width="216"
            height="64"
            alt="Google Play Store"
            class="mx-2 my-2 h-16"
          />
        </a>
      </div>
    </section>
    <section class="my-4 grid grid-cols-1 px-2 md:grid-cols-2 xl:grid-cols-3">
      {
        sections.map((section) => (
          <div class="my-4 mx-2 rounded-lg bg-gray-900">
            <img
              src={section.image}
              alt=""
              width="500"
              height="300"
              class="w-full rounded-t-lg object-cover"
            />
            <div class="mx-3 mt-2 mb-4">
              <h1 class="mb-2 text-center text-2xl font-semibold text-yellow-300">
                {section.title}
              </h1>
              {section.links.map((link) => (
                <div class=" mx-2 flex items-center border-b-[1px] border-b-gray-400 md:mx-4">
                  <Icon
                    name="mdi:arrow-right-bold-circle-outline"
                    class="h-5 w-5 text-yellow-300"
                  />
                  <a
                    href={link.href}
                    class="inline-block w-full py-3 pl-2 text-gray-100 hover:text-gray-300"
                  >
                    {link.title}
                  </a>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </section>
  </div>
</Layout>
